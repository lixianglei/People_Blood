<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/denglu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="#B1B1">
        <TextView
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="20dp"/>
    </LinearLayout>
     <LinearLayout
         android:id="@+id/EditText_layout"
         android:layout_marginTop="20dp"
         android:layout_below="@+id/denglu"
         android:layout_width="match_parent"
         android:layout_height="90dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:background="@drawable/login_edit"
         android:orientation="vertical"
         android:weightSum="2"
         >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           >
           <ImageView
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@drawable/login_phone_img"
               android:layout_gravity="center"
               android:layout_marginLeft="10dp"
               />
           <EditText
               android:id="@+id/Edit_Phone"
               android:layout_gravity="center"
               android:layout_width="220dp"
               android:layout_height="wrap_content"
               android:hint="手机"
                android:textColorHint="#DDDDDD"
               />
           <TextView
               android:id="@+id/ShuRu_PhoneNum"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="5dp"
               android:text="请输入手机号"
               android:textColor="#DAD9D9"
              android:layout_marginTop="25dp"
               android:background="#FBF8F4"
               />
       </LinearLayout>
         <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           >
             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:src="@drawable/login_password_img"
                 android:layout_gravity="center"
                 android:layout_marginLeft="10dp"
                 />
             <EditText
                 android:id="@+id/Edit_Password"
                 android:layout_gravity="center"
                 android:layout_width="200dp"
                 android:layout_height="wrap_content"
                 android:hint="密码"
                 android:textColorHint="#DDDDDD"
                 />
             <TextView
                 android:id="@+id/Mima_TiShi"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginRight="5dp"
                 android:text="6-16个字母,只支持数字，字母区分大小写"
                 android:textColor="#DAD9D9"

                 android:background="#FBF8F4"
                 />
         </LinearLayout>

     </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
    android:id="@+id/Forget_password"
   android:layout_below="@+id/EditText_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="忘记密码？"
        android:layout_marginLeft="15dp"
        android:textSize="20sp"
    android:textColor="#b1b1"/>


    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/Login_Btn"
        android:layout_below="@id/Forget_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginRight="5dp"
        android:background="@drawable/login_btn"/>
</RelativeLayout>
