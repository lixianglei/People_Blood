<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdf9ea"
android:id="@+id/Doctor_Line"
    android:orientation="vertical">
    <!--<include-->
    <!--layout="@layout/zaixaindoctor_title">-->
    <!--</include>-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/color_f9f9"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="全国有70064位血压专家为您在线治疗"
                    android:textColor="@color/color_b4b4"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Shengfen"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13sp"
                    android:layout_weight="0.88"
                    android:text="省份"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/item_arrow_right" />

                <ImageView
                    android:id="@+id/MyLoction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.06"
                    android:src="@drawable/zaixian" />
            </LinearLayout>

            <include
                layout="@layout/line_ececec"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />


            <LinearLayout
                android:id="@+id/YiShengZhiCheng"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13sp"
                    android:layout_weight="0.98"
                    android:text="医生职称"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/item_arrow_right" />
            </LinearLayout>

            <include
                layout="@layout/line_ececec"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />


            <LinearLayout
                android:id="@+id/YiYuanDengJi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13sp"
                    android:layout_weight="0.98"
                    android:text="医院等级"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/item_arrow_right" />
            </LinearLayout>

            <include
                layout="@layout/line_ececec"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />


            <LinearLayout
                android:id="@+id/GuanJianZi"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="13sp"
                    android:layout_weight="0.98"
                    android:hint="关键字/专家姓名/医院名称/疾病"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/item_arrow_right" />
            </LinearLayout>

            <include
                layout="@layout/line_ececec"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#fff"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/doct_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:src="@drawable/checkbox_normal" />

                <TextView
                    android:id="@+id/doct_jiahao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15px"
                    android:layout_toRightOf="@id/doct_image"
                    android:text="免费加号"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/ChaXunZhuanJia"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16sp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/doct_jiahao"
                    android:background="@drawable/doctor_button"
                    android:text="查询专家"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@color/color_write"
                android:divider="@drawable/line_e7e6"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:id="@+id/MianFeiWenYiSheng"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/mianfie_zaixian"
                    android:gravity="center_horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="免费问医生" />

                <TextView
                    android:id="@+id/JianKangGuWen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/doctor_guwen"
                    android:gravity="center_horizontal"
                    android:text="健康顾问" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@color/color_write">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="9dp"
                    android:text="热门医生"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/doctor_huanyihuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="9dp"
                    android:text="换一换"
                    android:textColor="@color/color_6cca77"
                    android:textSize="16sp" />

                <GridView
                    android:id="@+id/daoctor_gridviwe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/doctor_huanyihuan"
                    android:numColumns="4"></GridView>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>