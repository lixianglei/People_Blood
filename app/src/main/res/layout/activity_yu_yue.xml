<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/sd"
        layout="@layout/back_titlebar"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
    <ImageView
        android:layout_below="@id/sd"
        android:id="@+id/Doctor_Image"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher"
        />
    <RelativeLayout
        android:layout_below="@+id/sd"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_toRightOf="@+id/Doctor_Image"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Doctor_Name"
            android:textSize="25sp"
            android:layout_marginTop="5dp"
            android:text="李世民"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Doctor_Name"
            android:layout_marginLeft="30dp"
            android:id="@+id/Doctor_KeShi"
            android:text="dfdffdf"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            />
        <LinearLayout
            android:id="@+id/center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Doctor_Name"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Doctor_JiBie"
                android:text="zhuasdsd"
                android:layout_marginLeft="6dp"
                />


        </LinearLayout>
        <TextView
            android:id="@+id/Doctor_Hosptial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/center"
            android:layout_marginTop="10dp"
            android:text="dsfdff"
            android:src="@drawable/is_plus_normal"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Doctor_Image"
        android:id="@+id/Doctor_Content"
        android:text="sdsdsdsddddddddddddddddddddddddffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
        />
   <ListView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/YuYueListView"
       android:layout_below="@+id/Doctor_Content"
       ></ListView>
</RelativeLayout>