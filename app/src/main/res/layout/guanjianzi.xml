<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <include
       layout="@layout/back_titlebar"
       android:layout_height="60dp"
       android:layout_width="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109px"
        android:background="#E2E2E2">
        <EditText
           android:id="@+id/GuanJianZi_EditText"
            android:layout_marginTop="20px"
            android:layout_width="280dp"
            android:layout_height="70px"
            android:layout_marginLeft="13px"
            android:background="@drawable/edit_selector"
            android:hint="关键字/专家姓名/医院名称/疾病"
            android:textColorHint="#EBE9E9"
            />
        <TextView
            android:id="@+id/GuanJianZi_Sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="30px"
            android:layout_gravity="center_vertical"
            android:text="确定"
            android:textColor="#00CC33"
            />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/GuanJianZi_ListView"
        ></ListView>
</LinearLayout>