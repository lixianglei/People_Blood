<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false" android:drawable="@color/color_4cbf58">
    <shape android:shape="rectangle">
        <corners android:radius="10dp"></corners>
        <!--stroke设置描边-->
        <stroke android:width="2dp" android:color="#000"></stroke>
        <solid android:color="@color/color_boold_green"></solid>
    </shape>


</item>
    <item android:state_pressed="true" android:drawable="@color/sd_ccc">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"></corners>
            <!--stroke设置描边-->
            <stroke android:width="2dp" android:color="#000"></stroke>
            <solid android:color="@color/color_boold_green"></solid>
        </shape>
    </item>
</selector>