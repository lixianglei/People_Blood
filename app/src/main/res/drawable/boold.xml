<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp"></padding>
            <!--设置圆角-->
            <corners android:radius="5dp"></corners>
            <!--stroke设置描边-->
            <stroke android:width="2dp" android:color="@color/colorGrays"></stroke>
            <solid android:color="@color/color_boold_green"></solid>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp"></padding>
            <!--设置圆角-->
            <corners android:radius="5dp"></corners>
            <!--stroke设置描边-->
            <stroke android:width="1dp" android:color="#4C4C4C"></stroke>
        </shape>
    </item>
</selector>